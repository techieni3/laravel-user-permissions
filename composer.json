{
    "name": "techieni3/laravel-user-permissions",
    "description": "A Laravel package for managing user permissions.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "role": "Developer",
            "name": "Nitin Gaikwad",
            "email": "niteen1593@gmail.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "laravel/framework": "^v12.35.0"
    },
    "require-dev": {
        "laravel/pint": "^1.25",
        "orchestra/testbench": "^10.7",
        "pestphp/pest": "^4.0",
        "phpstan/phpstan": "^2.1",
        "rector/rector": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "Techieni3\\LaravelUserPermissions\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TechieNi3\\LaravelUserPermissions\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "scripts": {
        "format": [
            "rector",
            "pint --parallel"
        ],
        "format:check": [
            "rector --dry-run",
            "pint --test"
        ],
        "test": "pest",
        "test-coverage": "pest --coverage-html coverage",
        "analyse": "phpstan analyse",
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench sync:permissions",
            "@php vendor/bin/testbench sync:roles",
            "@php vendor/bin/testbench serve --ansi"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Techieni3\\LaravelUserPermissions\\Providers\\PermissionsServiceProvider"
            ]
        }
    }
}
